@using Infrastructure.DTOs.Movie
@model CreateMovieDTO

@{
    ViewData["Title"] = "Create Movie";
}

@using (Html.BeginForm("Create", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "4" })
    </div>

    <div class="form-group">
        @Html.Label("Image")
        <input type="file" name="imageFile" id="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create Movie</button>
}
