
@using System.Security.Claims
@using Infrastructure.Data
@using Infrastructure.Services
@model IReadOnlyList<TrendingMovieDTO>;

@{
    ViewData["Title"] = "Movies";
}


<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        a {
            text-decoration: none
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            color: #333;
        }

        tr:hover {
            background-color: #f9f9f9;
        }

        /* img {
                    max-width: 100px;
                    height: auto;
                } */

        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <h1>Movies List</h1>
    @if (User.FindFirstValue(ClaimTypes.Role)!.Equals(UserRoles.admin, StringComparison.OrdinalIgnoreCase))
    {
        <a class="button" href="@Url.Action($"Create", "Movies")">Add all to database</a>
        <br />
    }

    <div class="container text-center">
        <div class="row row-cols-4 gx-4 gy-2">
            @foreach (var movie in Model)
            {
                
                    <div>
                        <img src="@movie.ImageUrl" style="width: 300px;" class="rounded-5" />
                        <h5>@movie.Title</h5>
                        <p>@(movie.Description.Length > 200 ? movie.Description.Substring(0, Math.Min(200, movie.Description.Length)) + "..." : movie.Description)</p>
                    @Html.ActionLink("Add to database", "MyMethod", "MyController", null, new { @class = "btn btn-primary" })

                    </div>
                
            }
        </div>
    </div>
</body>

