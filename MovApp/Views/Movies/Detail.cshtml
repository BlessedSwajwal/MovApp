@using Infrastructure.DTOs.Movie
@using Infrastructure.Data
@using System.Security.Claims
@model MovieDetailDTO
@{
    ViewData["Title"] = Model.Name;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Add your CSS styles here -->
    <style>
        .movie-details {
            background-color: #f9f9f9;
            padding: 20px;
            margin: 0 auto;
            max-width: 1200px; /* Optional: Limit the width of the container */
        }

        .movie-image {
            width: 100%;
            height: 500px;
            object-fit: cover;
        }

        .movie-info {
            /* Add styles for other movie details (Title, Description, Rating, etc.) */
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="movie-details">
        <img class="movie-image" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Movie Poster">
        <div class="movie-info">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <p>Rating: @Model.Rating</p>
            <!-- Other movie details (TotalRates, Comments, etc.) go here -->
        </div>
        @using (Html.BeginForm("SubmitComment", "Movies", FormMethod.Post))
        {
            <h5>Your comment: </h5>
            <textarea type="text" id="comment" name="comment" rows="4" cols="50"></textarea>
            <br />
            <input type="text" id="movieId" name="movieId" hidden value="@Model.Id" />
            <button type="submit">Submit</button>
        }


        @foreach (var comment in Model.Comments)
        {
            <strong>@comment.CommenterName:</strong> @comment.Description
            <br />
        }
    </div>
</body>
</html>
